<%- include('./partials/head') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
    
          <h1>Souq Wishlist</h1>
          <p>Your personal wishlist app. Never forget what you want.</p>
        </div>
      </div>

      <!-- Auth Card -->
      <% if (user) { %>
        <div class="card bg-secondary text-dark">
          <div class="card-body text-center py-4">
            <h2 class="card-title mb-3">Welcome, <%= user.username %>!</h2>
            <div class="d-flex justify-content-center gap-3 flex-wrap">
              <a href="/wishlist" class="btn btn-primary">My Wishlist</a>
              <a href="/wishlist/browse" class="btn btn-info">Browse Wishlists</a>
              <a href="/wishlist/new" class="btn btn-success">Add Item</a>
              <a href="/auth/sign-out" class="btn btn-outline-dark">Sign out</a>
            </div>
          </div>
        </div>
      <% } else { %>
        <div class="card bg-secondary text-dark">
          <div class="card-body text-center py-4">
            <div class="d-flex justify-content-center gap-3 flex-wrap">
              <a href="/wishlist/browse" class="btn btn-info">Browse Wishlists</a>
              <a href="/auth/sign-up" class="btn btn-primary">Sign up</a>
              <a href="/auth/sign-in" class="btn btn-outline-primary">Sign in</a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>

</body>
</html>