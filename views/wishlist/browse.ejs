<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Souq Wishlist</title>
</head>
<body>

<%- include('../partials/head') %>

<div class="container">
  <h1 class="browse-page-title">Browse Community Wishlists</h1>
  <p class="browse-page-subtitle">Discover what others are wishing for and get inspired!</p>
  
  <% if (wishlistItems.length === 0) { %>
    <div class="browse-empty-state">
      <h3>No wishlists to browse yet!</h3>
      <p class="browse-empty-text">Be the first to share your wishlist with the community.</p>
      <% if (user) { %>
        <a href="/wishlist/new" class="btn-primary">Add Your First Item</a>
      <% } else { %>
        <a href="/auth/sign-up" class="btn-primary">Sign Up to Create Wishlist</a>
      <% } %>
    </div>
  <% } else { %>
    <div class="browse-container">
      <% wishlistItems.forEach(item => { %>
        <div class="browse-card">
          <% if (item.imageUrl) { %>
            <img src="<%= item.imageUrl %>" alt="<%= item.title %>">
          <% } %>
          <h4><%= item.title %></h4>
          <p><%= item.description %></p>
          <p class="price"><%= item.price %> BHD</p>
          <p class="browse-owner-info">
            By: <strong><%= item.owner ? item.owner.username : 'Anonymous' %></strong>
          </p>
          <a href="/wishlist/<%= item._id %>" class="btn btn-primary">View Details</a>
        </div>
      <% }) %>
    </div>
  <% } %>
  
  <div class="browse-navigation">
    <% if (user) { %>
      <a href="/wishlist" class="btn-primary browse-nav-btn">My Wishlist</a>
      <a href="/wishlist/new" class="btn-success browse-nav-btn">Add New Item</a>
    <% } else { %>
      <a href="/auth/sign-up" class="btn-primary browse-nav-btn">Join to Create Wishlist</a>
    <% } %>
    <a href="/" class="btn-secondary browse-nav-btn">Back to Home</a>
  </div>
</div>

</body>
</html>
