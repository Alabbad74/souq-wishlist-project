<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
    <title>Souq Wishlist</title>
    
</head>
<%- include('../partials/head') %>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <h1 class="mb-4"> Browse Community Wishlists</h1>
      <p class="text-muted mb-4">Discover what others are wishing for and get inspired!</p>
      
      <% if (wishlistItems.length === 0) { %>
        <div class="text-center py-5">
          <h3>No wishlists to browse yet!</h3>
          <p class="text-muted">Be the first to share your wishlist with the community.</p>
          <% if (user) { %>
            <a href="/wishlist/new" class="btn btn-primary">Add Your First Item</a>
          <% } else { %>
            <a href="/auth/sign-up" class="btn btn-primary">Sign Up to Create Wishlist</a>
          <% } %>
        </div>
      <% } else { %>
        <div class="list-group">
          <% wishlistItems.forEach(item => { %>
            <a href="/wishlist/<%= item._id %>" class="list-group-item list-group-item-action mb-3 p-4 text-decoration-none">
              <div class="d-flex align-items-start">
                <% if (item.imageUrl) { %>
                  <img src="<%= item.imageUrl %>" alt="<%= item.title %>" 
                       class="img me-3 rounded wishlist-browse-thumbnail">
                <% } %>
                <div class="flex-grow-1">
                  <h5 class="mb-2 text-dark"><%= item.title %></h5>
                  <p class="mb-2 text-muted"><%= item.description %></p>
                  <p class="mb-2"><strong>Target Price: <%= item.price %> BHD</strong></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                      <i class="me-1">�</i>
                      Wished by: <strong><%= item.owner ? item.owner.username : 'Anonymous' %></strong>
                    </small>
                    <small class="text-primary">
                      Click to view details and comments →
                    </small>
                  </div>
                </div>
              </div>
            </a>
          <% }) %>
        </div>
      <% } %>
      
      <div class="mt-4">
        <% if (user) { %>
          <a href="/wishlist" class="btn btn-primary">My Wishlist</a>
          <a href="/wishlist/new" class="btn btn-success">Add New Item</a>
        <% } else { %>
          <a href="/auth/sign-up" class="btn btn-primary">Join to Create Wishlist</a>
        <% } %>
        <a href="/" class="btn btn-secondary">Back to Home</a>
      </div>
    </div>
  </div>
</div>

</body>
</html>
