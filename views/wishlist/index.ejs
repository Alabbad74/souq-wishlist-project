<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
    <title>Souq Wishlist</title>
    
</head>
<%- include('../partials/head') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h2 class="mb-4">My Wishlist</h2>
      
      <% if (wishlistItems && wishlistItems.length > 0) { %>
        <div class="row">
          <% wishlistItems.forEach(item => { %>
            <div class="col-md-6 col-lg-4 mb-4">
              <div class="card h-100">
                <% if (item.imageUrl) { %>
                  <img src="<%= item.imageUrl %>" class="img" alt="<%= item.title %>">
                <% } %>
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><%= item.title %></h5>
                  <p class="card-text flex-grow-1"><%= item.description %></p>
                  <% if (item.price) { %>
                    <p class="card-text"><strong><%= item.price %> BHD</strong></p>
                  <% } %>
                  <% if (item.comments) { %>
                    <div class="card-text">
                      <small class="text-muted">Comments: <%= item.comments %></small>
                    </div>
                  <% } %>
                  <div class="mt-auto">
                    <a href="/wishlist/<%= item._id %>/edit" class="btn btn-outline-primary btn-sm">Edit</a>
                    
                    <form method="POST" action="/wishlist/<%= item._id %>?_method=DELETE" class="DELETE">
                      <button type="submit" class="btn btn-outline-danger btn-sm">DELETE</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="text-center mt-5">
          <h4>Your wishlist is empty</h4>
          <p class="text-muted">Start adding items you want to remember!</p>
          <a href="/wishlist/new" class="btn btn-primary">Add Your First Item</a>
        </div>
      <% } %>
    </div>
  </div>
</div>

</body>
</html>