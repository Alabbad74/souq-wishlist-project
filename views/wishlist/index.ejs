<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <title>My Wishlist - Souq Wishlist</title>
</head>
<body>

<%- include('../partials/head') %> <!-- Navbar -->

<div class="container mt-5">
  <h2 class="text-center mb-4">My Wishlist</h2>

  <% if (wishlistItems && wishlistItems.length > 0) { %>
    <% wishlistItems.forEach(item => { %>
      <div class="wishlist-card">
        <% if (item.imageUrl) { %>
          <img src="<%= item.imageUrl %>" alt="<%= item.title %>">
        <% } %>
        <h4><%= item.title %></h4>
        <p><%= item.description %></p>
        <% if (item.price) { %>
          <p class="price"><%= item.price %> BHD</p>
        <% } %>
        <% if (item.comments) { %>
          <small class="text-muted d-block mb-2">Notes: <%= item.comments %></small>
        <% } %>

        <a href="/wishlist/<%= item._id %>/edit" class="btn btn-outline-primary">Edit</a>
        <form action="/wishlist/<%= item._id %>?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit" class="btn btn-outline-danger">Delete</button>
        </form>
      </div>
    <% }) %>
  <% } else { %>
    <div class="text-center mt-5">
      <h4>Your wishlist is empty</h4>
      <p class="text-muted">Start adding items you want to remember!</p>
      <a href="/wishlist/new" class="btn btn-success">Add Your First Item</a>
    </div>
  <% } %>
</div>

</body>
</html>
